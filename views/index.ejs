<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('./components/head') %>
</head>
<body>
    <%- include('./components/nav') %>
    <header>
        <img src="/img/banner.png" alt="">
    </header>
    <main>
        <section id="cards">
            <h2>Lista de Pokemons</h2>
            <% pokedex.forEach((pokemon) =>{ %>
                <a href="/personagem/<%= pokemon.id %> ">
                    <div class="card">
                        <img src="<%= pokemon.img %>" alt="">
                        <h3><%= pokemon.nome%></h3>
                        <p class="descricao"><%= pokemon.descricao%></p>
                        <p class="tipo">Tipo: <%= pokemon.tipo%></p>
                        <div id="configuracoes">
                            <a id="editar" href="/getById/<%= pokemon.id %>/put">Editar</a>
                            <a id="apagar" href="/getById/<%= pokemon.id %>/delete">Apagar</a>
                        </div>
                    </div>
                </a>
            <% }) %>
        </section>
    </main>
    <% if (pokemonPut != null) { %>
        <%- include('./components/modalPut') %>
    <% } %>
    
    <% if (pokemonDel != null) { %>
        <%- include('./components/modalDel') %>
    <% } %>

    <%- include('./components/footer') %>

    
</body>
</html>